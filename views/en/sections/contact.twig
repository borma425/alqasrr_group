
  <!-- Contact -->
  <section id="contact" class="py-5 bg-light">
    <div class="container">
      <div class="row g-4 align-items-center">
        <!-- Left info -->
        <div class="col-12 col-lg-5">
          <h3 class="contact-title">{{ get_AlQasrGroup_contact_title() }}</h3>
          <p class="text-muted contact-p">
   {{ get_AlQasrGroup_contact_description() }}
          </p>

          <div class="vstack gap-3">
            <!-- item -->
            <div class="d-flex align-items-start gap-3">
              <span class="contact-badge">
                <!-- location icon -->
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                  <path d="M12 22s7-6.1 7-12a7 7 0 1 0-14 0c0 5.9 7 12 7 12Z" stroke="#1e7bd8" stroke-width="1.7"/>
                  <circle cx="12" cy="10" r="2.8" stroke="#1e7bd8" stroke-width="1.7"/>
                </svg>
              </span>
              <div>
                <div class="fw-semibold Jakarta">{{ get_AlQasrGroup_contact_address() }}</div>
                <div class="text-muted small"> {{ get_AlQasrGroup_contact_address_details() }} </div>
              </div>
            </div>

            <!-- item -->
            <div class="d-flex align-items-start gap-3">
              <span class="contact-badge">
                <!-- mail icon -->
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                  <path d="M3 7.5a2.5 2.5 0 0 1 2.5-2.5h13A2.5 2.5 0 0 1 21 7.5v9a2.5 2.5 0 0 1-2.5 2.5h-13A2.5 2.5 0 0 1 3 16.5v-9Z" stroke="#1e7bd8" stroke-width="1.7"/>
                  <path d="M4 7l8 5 8-5" stroke="#1e7bd8" stroke-width="1.7" />
                </svg>
              </span>
              <div>
                <div class="fw-semibold Jakarta">راسلنا</div>
                <div class="text-muted small">{{ get_AlQasrGroup_contact_email() }}</div>
              </div>
            </div>


          <div class="d-flex align-items-start gap-3">
            <span class="contact-badge">
              <!-- phone -->
<svg width="20" height="20" viewBox="0 0 24 24" fill="none">
      <path d="M6.62 10.79a15.05 15.05 0 0 0 6.59 6.59l2.2-2.2a1 1 0 0 1 1.01-.24
               11.72 11.72 0 0 0 3.68.59 1 1 0 0 1 1 1v3.5
               a1 1 0 0 1-1 1C9.61 21 3 14.39 3 6.5a1 1 0 0 1 1-1H7.5
               a1 1 0 0 1 1 1c0 1.27.2 2.49.59 3.68a1 1 0 0 1-.24 1.01l-2.23 2.6Z" stroke="#1e7bd8" stroke-width="1.7" fill="none"></path>
    </svg>
            </span>
            <div>
              <div class="fw-semibold Jakarta">اتصل بنا</div>
              <div class="text-muted small" dir="ltr">{{ get_AlQasrGroup_contact_phone() }}</div>
            </div>
          </div>




          </div>
        </div>

        <!-- Right form -->
        <div class="col-12 col-lg-7">
          <div class="contact-card rounded-4 p-4 p-lg-5 shadow-sm">
            <h4 class="fw-semibold message-title">{{ get_AlQasrGroup_contact_form_title() }}</h4>
            <p class="text-muted small contact-p-right">
            {{ get_AlQasrGroup_contact_form_description() }}
            </p>


          <form id="contactForm" class="row g-3">
            <div class="col-12 col-md-6">
              <label class="form-label small">الاسم الأول *</label>
              <input type="text" name="first_name" class="form-control contact-input" placeholder="الاسم الأول" required>
            </div>
            <div class="col-12 col-md-6">
              <label class="form-label small">الاسم الثاني</label>
              <input type="text" name="second_name" class="form-control contact-input" placeholder="الاسم الثاني">
            </div>
            <div class="col-12 col-md-6">
              <label class="form-label small">الهاتف</label>
              <input type="tel" name="phone" class="form-control contact-input" placeholder="الهاتف">
            </div>
            <div class="col-12 col-md-6">
              <label class="form-label small">البريد الإلكتروني *</label>
              <input type="email" name="email" class="form-control contact-input" placeholder="البريد الإلكتروني" required>
            </div>
            <div class="col-12">
              <label class="form-label small">رسالتك *</label>
              <textarea rows="4" name="message" class="form-control contact-input" placeholder="اكتب رسالتك هنا" required></textarea>
            </div>

            <div class="col-12 d-flex justify-content-center pt-2">
              <button type="submit" class="btn btn-primary rounded-pill px-5 py-2 fw-semibold contact-btn">
                <span class="submit-text">إرسال</span>
                <span class="loading-text" style="display:none;">جاري الإرسال...</span>
              </button>
            </div>
            
            <div class="col-12">
              <div id="contactFormMessage" class="alert" style="display:none;"></div>
            </div>
          </form>
          </div>
        </div>

      </div>
    </div>
  </section>
