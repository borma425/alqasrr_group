{% extends "en/base.twig" %}

{% block grid_content %}

        <!-- Hero Section -->
        <section class="hero">
            <div class="container">
                <div class="hero-content">
                    <div class="hero-text">
                        <h1 class="hero-title">{{ post.title }}</h1>
                        <p class="hero-description">
                            {% if post.excerpt %}
                                {{ post.excerpt.read_more(false) }}
                            {% elseif post.content %}
                                {{ post.content|striptags|slice(0, 150) }}...
                            {% endif %}
                        </p>
                    </div>
                    {% if post.thumbnail %}
                        <img class="hero-image" src="{{ post.thumbnail.src('full') }}" alt="{{ post.title }}" />
                    {% else %}
                        <img class="hero-image" src="{{ asset_url('no_image_1200x627.png', 'img/default/') }}" alt="{{ post.title }}" />
                    {% endif %}
                </div>
            </div>
        </section>

        <!-- Article Header -->
        <section class="article-header">
            <div class="container">
                <div class="article-meta">
                    <p class="article-date">{{ post.english_date ?? post.date('j F Y') }}</p>
                    <h2 class="article-title">{{ post.title }}</h2>
                </div>
            </div>
        </section>

        <!-- Article Content -->
        <section class="article-content">
            <div class="container">
                <div class="article-body">
                    {{ post.content }}
                </div>
            </div>
        </section>

{% endblock %}
