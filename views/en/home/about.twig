    <!-- About Section -->
    <section class="about-section">
        <div class="container-wide">
            <div class="about-grid">
                <div class="about-image">
                    {% if about_image %}
                        <img src="{{ about_image }}" alt="{{ about_title }}">
                    {% endif %}
                </div>
                <div class="about-content">
                    <div class="section-header">
                        <div class="section-label">
                            {% if about_subtitle %}
                                <span>{{ about_subtitle }}</span>
                            {% endif %}
                            <img src="{{ asset_url('line-8.svg', 'img/main/') }}" alt="" class="line-decoration">
                        </div>
                        <h2 class="section-title text-white">{{ about_title }}</h2>
                    </div>
                    {% if about_description %}
                        <p class="about-text">
                            {{ about_description }}
                        </p>
                    {% endif %}
                    {% if about_link_text and about_link_url %}

<a href="{{ about_link_url }}" class="btn-outline-secondary">
                            <span> {{ about_link_text }}</span>
                            <img src="{{ asset_url('arrow-right-1.svg', 'img/main/') }}" alt="" class="w-6 h-6" width="24" height="24">
                        </a>

                    {% endif %}
                </div>

            </div>
        </div>
    </section>