
    <!-- News Section -->
    <section class="news-section">
        <div class="container-wide">
            <div class="section-label">
                {% set subtitle_text = news_subtitle|default('Latest Insights') %}
                <span>{{ subtitle_text }}</span>
                <img src="{{ asset_url('line-8.svg', '/img/main/') }}" alt="" class="line-decoration">
            </div>
            <h2 class="section-title">
                {% set title_text = news_title|default('From Our Blog') %}
                {{ title_text }}
            </h2>

            <div class="news-grid">

            {% if news is defined and news|length > 0 %}
{% for news in news %}
                <article class="news-card">
                    <img src="{{ news.thumbnail.src('full') }}" alt="{{ news.title }}" class="news-image">
                    <div class="news-content">
                        <time class="news-date">{{ format_date_english(news.date('Y-m-d')) }}</time>
                        <h3 class="news-title">{{ news.title }}</h3>
                        <p class="news-excerpt">{{ news.excerpt.read_more(false) }}</p>
                        <a href="{{ news.link }}" class="news-link">Read More</a>
                    </div>
                </article>

{% endfor %}
            {% else %}
                <p class="news-empty">Stay tunedâ€”new articles are coming soon.</p>
            {% endif %}

            </div>

            <div class="news-controls">
                <div class="news-progress">
                    <div class="news-progress-bar">
                        <div class="news-progress-fill"></div>
                    </div>
                </div>
                <div class="carousel-buttons">
                    <button class="carousel-btn prev" aria-label="Previous">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                stroke-linejoin="round" />
                        </svg>
                    </button>
                    <button class="carousel-btn next" aria-label="Next">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                stroke-linejoin="round" />
                        </svg>
                    </button>
                </div>

            </div>
        </div>
    </section>