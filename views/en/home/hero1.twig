    <!-- Hero Section -->
    {% set hero_bg = function('get_option','hero_bg_image') %}
    {% set hero_title_en = function('get_option','hero_title_en') %}
    {% set hero_subtitle_en = function('get_option','hero_subtitle_en') %}
    <section class="hero-section min-h-screen flex items-center" style="background-image: url('{{ function('esc_url', hero_bg) }}');">
        <div class="hero-bg">
            {# في حال رغبتك بالاحتفاظ بعنصر <img> بدلاً من CSS background #}
            <img src="{{ function('esc_url', hero_bg)|default(asset_url('image.png', '/img/home/hero/')) }}" alt="{{ function('get_bloginfo','name') }}" class="hero-image">
        </div>
        <div class="hero-content">
            <h1 class="hero-title">{{ hero_title_en|default('Luxury Beyond Borders') }}</h1>
            <p class="hero-subtitle">{{ hero_subtitle_en|default('Distinctive real estate projects across global markets.') }}</p>
        </div>
    </section>