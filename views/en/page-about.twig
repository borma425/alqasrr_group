<style>
.dynamic-title {
  margin-bottom: 15px;
  line-height: 1.3;
}

/* Dynamic margin based on text length */
.dynamic-title[data-length="short"] {
  margin-left: 0px;
}

.dynamic-title[data-length="medium"] {
  margin-left: 50px;
}

.dynamic-title[data-length="long"] {
  margin-left: 70px;
}

/* Fallback for titles without data attribute */
.dynamic-title {
  margin-left: 0px;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const titles = document.querySelectorAll('.dynamic-title');
  
  titles.forEach(function(title) {
    const textLength = title.textContent.length;
    
    if (textLength <= 8) {
      title.setAttribute('data-length', 'short');
      title.style.marginLeft = '0px';
    } else if (textLength <= 15) {
      title.setAttribute('data-length', 'medium');
      title.style.marginLeft = '50px';
    } else {
      title.setAttribute('data-length', 'long');
      title.style.marginLeft = '70px';
    }
  });
});
</script>

