    <!-- CTA Section -->
    {% set footer_title = function('get_option','footer_title') %}
    {% set footer_description = function('get_option','footer_description') %}
    <section class="cta-section">
        <div class="cta-circles">
            <div class="circle circle-1"></div>
            <div class="circle circle-2"></div>
            <div class="circle circle-3"></div>
        </div>
        <div class="cta-overlay"></div>
        <div class="cta-content">
            {% if footer_title %}
            <h2 class="cta-title">{{ footer_title }}</h2>
            {% endif %}
            {% if footer_description %}
            <p class="cta-subtitle">{{ footer_description }}</p>
            {% endif %}
            <a href="{{ site.url }}/contact_us" class="cta-link">
                <img src="{{ asset_url('link.svg', 'img/main/') }}" alt="تواصل معنا" class="w-16 h-16">
            </a>
        </div>
    </section>