                        <div class="form-message" style="display: none; margin-bottom: 20px; padding: 15px; border-radius: 5px;"></div>

                        <button type="submit" class="btn btn-primary">
                            <img src="{{ asset_url('arrow-right.svg', '/img/main/') }}" alt="" class="btn-icon">
                            <span class="submit-text">ارسال</span>
                            <span class="loading-text" style="display: none;">جاري الإرسال...</span>
                        </button>
                    </form>

                </div>
            </div>
        </section>
