        <!-- Contact Form Section -->
        <section class="section contact-section">
            <div class="container">
                <div class="contact-grid">
                    <div class="contact-info">
                        <div class="section-label">
                            <span class="subheading">سجل الان</span>
                            <img src="{{ asset_url('line-8.svg', '/img/main/') }}" alt="">
                        </div>
                        <h2 class="heading">
                            سجل اهتمامك ليرجع لك فريق<br>
                            المبيعات بأفضل الفرص الملائمة<br>
                            لرغباتك
                        </h2>
                    </div>

                    <form class="contact-form" id="contactFormCTA">
                        <input type="hidden" name="nonce" value="{{ fn('wp_create_nonce', 'AlQasrGroup_contact_nonce') }}">
                        <input type="hidden" name="current_language" value="{{ fn('is_english_version') ? 'en' : 'ar' }}">

                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">
                                    الأسم الاول <span class="required">*</span>
                                </label>
                                <input type="text" name="first_name" class="form-input" placeholder="مثال : محمد" required>
                            </div>

                            <div class="form-group">
                                <label class="form-label">
                                    الأسم الاخير <span class="required">*</span>
                                </label>
                                <input type="text" name="second_name" class="form-input" placeholder="مثال : أحمد" required>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">
                                    رقم الجوال <span class="required">*</span>
                                </label>
                                <input type="tel" name="phone" class="form-input" placeholder="مثال : +966 12 345 6789" required>
                            </div>

                            <div class="form-group">
                                <label class="form-label">بريدك الألكتروني</label>
                                <input type="email" name="email" class="form-input" placeholder="username@example.com">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                الرسالة <span class="required">*</span>
