    <!-- Header / Navigation -->
{% set site_title = get_AlQasrGroup_site_title('ar') %}
{% set current_page_url = current_url|default(site.url) %}
{% set english_url = site.url ~ '/en' %}
{% if current_page_url starts with site.url %}
    {% set relative_part = current_page_url|slice(site.url|length) %}
    {% if relative_part is empty or relative_part == '/' %}
        {% set english_url = site.url ~ '/en' %}
    {% else %}
        {% if relative_part starts with '/' %}
            {% set english_url = site.url ~ '/en' ~ relative_part %}
        {% else %}
            {% set english_url = site.url ~ '/en/' ~ relative_part %}
        {% endif %}
    {% endif %}
{% endif %}
<nav class="header-nav">
    <div class="container-wide">
        <nav class="nav-wrapper">
            <!-- Right side - Menu -->
            <div class="nav-right">
                <button class="menu-icon" aria-label="القائمة">
                    <div class="w-[34px] h-[34px] bg-[100%_100%]"
                        style="background-image: url('{{ asset_url('vuesax-linear-textalign-right.svg', 'img/main/') }}');">
                    </div>
                </button>
                <span class="nav-text">القائمه</span>
            </div>

            <!-- Center - Logo -->
            <div class="nav-center">
                <a href="{{ site.url }}" class="logo-link" aria-label="{{ site_title }}">
                    <img src="{{ function('esc_url', function('get_option','AlQasrGroup_site_logo_medium')) }}" alt="{{ site_title }}" class="logo">
                </a>
            </div>

            <!-- Left side - Language & CTA -->
            <div class="nav-left">
                <a href="{{ english_url }}" class="language-selector" aria-label="Change language">
                    <img src="{{ asset_url('vuesax-linear-global.svg', 'img/main/') }}" alt="" class="w-6 h-6">
                    <span class="nav-text">English</span>
                </a>
                <a href="{{ site.url }}/contact_us" class="btn-outline-white">
                    <span>معرفه المزيد</span>
                    <img src="{{ asset_url('arrow-right.svg', 'img/main/') }}" alt="" class="w-6 h-6">
                </a>
            </div>
        </nav>
    </div>
</nav>

    <!-- Menu -->
    <header class="menu menu-hidden">
        <div class="app-container">
            <!-- Hero Gallery Section -->
            <div class="hero-gallery">
                <div class="gallery-grid">



                {% if header_project_types %}
                    {% for project_type in header_project_types %}
                    <!-- Gallery Card {{ loop.index }} -->
                    <article class="gallery-card">
                        {% if project_type.image_url %}
                            <img src="{{ project_type.image_url }}" alt="{{ project_type.name }}" class="gallery-image">
                        {% else %}
                            <img src="{{ asset_url('rectangle-3.png', 'img/main/') }}" alt="{{ project_type.name }}" class="gallery-image">
                        {% endif %}
                        <div class="gallery-overlay">
                            <div class="gallery-content">
                                <h2 class="gallery-title">{{ project_type.name }}</h2>
                                <a href="{{ project_type.link }}" class="gallery-link">
                                    <span>معرفه المزيد</span>
                                    <img src="{{ asset_url('arrow-right.svg', 'img/main/') }}" alt="" class="arrow-icon">
                                </a>
                            </div>
                        </div>
                    </article>
                    {% endfor %}
 
                {% endif %}











                </div>
            </div>

            <!-- Sidebar Navigation -->
            <aside class="sidebar">
                <div class="sidebar-content">
                    <!-- Close Button -->
                <button class="close-btn" aria-label="إغلاق القائمة">
                    <img src="{{ asset_url('icons---close.svg', 'img/main/') }}" alt="">
                </button>

                    <!-- Navigation Menu -->
                {% if header_menu_ar %}
                <nav class="main-nav">
                    <ul class="nav-list">
                        {% for item in header_menu_ar.items %}
                        <li class="nav-item {{ item.current ? 'active' }}">
                            <a href="{{ item.link }}" class="nav-link">
                                {% if item.current %}
                                <img src="{{ asset_url('line-8.png', 'img/main/') }}" alt="" class="nav-underline">
                                {% endif %}
                                <span>{{ item.title }}</span>
                            </a>
                        </li>
                        {% endfor %}
                    </ul>
                </nav>
                {% endif %}

                    <!-- Footer Section -->
                    <div class="sidebar-footer">
                        <!-- Social Media Links -->
                    <div class="social-links">
                        {% set social_icons = get_AlQasrGroup_social_icons() %}
                        {% if social_icons %}
                            {% for icon in social_icons %}
                                <a href="{{ icon.url }}" class="social-link" aria-label="{{ icon.title }}" target="_blank" rel="noopener noreferrer">
                                    <img src="{{ icon.icon }}" alt="{{ icon.title }}" >
                                </a>
                            {% endfor %}
                        {% endif %}
                    </div>

                        <!-- Copyright -->


                    <p class="copyright">جميع الحقوق محفوظة © {{ site_title }} {{ "now"|date("Y") }}</p>


                    </div>
                </div>
            </aside>
        </div>
    </header>
