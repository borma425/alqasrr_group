{% extends "ar/base.twig" %}

{% block grid_content %}





        <!-- Hero Section -->
        <section class="hero">
            <div class="container">
                <div class="hero-content">
                    <div class="hero-text">
                        <h1 class="hero-title">{{ post.title }}</h1>
                        <p class="hero-description">
                            {% if post.excerpt %}
                                {{ post.excerpt.read_more(false) }}
                            {% elseif post.content %}
                                {{ post.content|striptags|slice(0, 150) }}...
                            {% endif %}
                        </p>
                    </div>
                    {% if post.thumbnail %}
                        <img class="hero-image" src="{{ post.thumbnail.src('full') }}" alt="{{ post.title }}" />
                    {% else %}
                        <img class="hero-image" src="{{ asset_url('no_image_1200x627.png', 'img/default/') }}" alt="{{ post.title }}" />
                    {% endif %}
                </div>
            </div>
        </section>

        <!-- Article Header -->
        <section class="article-header">
            <div class="container">
                <div class="article-meta">
                    <p class="article-date">{{ post.date('j F Y') }}</p>
                    <h2 class="article-title">
                        {% if post.category %}
                            {{ post.category.name }}
                        {% elseif post.categories|length > 0 %}
                            {{ post.categories[0].name }}
                        {% else %}
                            {{ post.title }}
                        {% endif %}
                    </h2>
                </div>
            </div>
        </section>

        <!-- Article Content -->
        <section class="article-content">
            <div class="container">
                <div class="article-body">
                    {{ post.content }}
                </div>
            </div>
        </section>


        <!-- Related Articles -->
        <section class="related-articles">
            <div class="container">
                <div class="section-header">
                    <div class="section-label">
                        <span>ابق على اطلاع على أحدث المقالات</span>
                        <img src="{{ asset_url('line-8.svg', 'img/main/') }}" alt="" />
                    </div>
                    <h2 class="section-heading">أحدث الرؤى العقارية</h2>
                </div>

                <div class="related-articles-grid">
                    {% if related_posts|length > 0 %}
                        {% for related_post in related_posts %}
                            <article class="related-article-card">
                                {% if related_post.thumbnail %}
                                    <img class="card-image" src="{{ related_post.thumbnail.src('full') }}" alt="{{ related_post.title }}" />
                                {% else %}
                                    <img class="card-image" src="{{ asset_url('no_image_1200x627.png', 'img/default/') }}" alt="{{ related_post.title }}" />
                                {% endif %}
                                <div class="card-content">
                                    <p class="card-date">{{ related_post.date('j F Y') }}</p>
                                    <h3 class="card-title">{{ related_post.title }}</h3>
                                    <p class="card-excerpt">
                                        {% if related_post.excerpt %}
                                            {{ related_post.excerpt.read_more(false) }}
                                        {% elseif related_post.content %}
                                            {{ related_post.content|striptags|slice(0, 120) }}...
                                        {% endif %}
                                    </p>
                                    <a href="{{ related_post.link }}" class="card-link">عرض المزيد</a>
                                </div>
                            </article>
                        {% endfor %}
                    {% else %}
                        <p style="text-align: center; padding: 20px; grid-column: 1 / -1;">لا توجد رؤى مرتبطة في الوقت الحالي.</p>
                    {% endif %}
                </div>

                <div class="related-controls">
                    <div class="related-progress">
                        <div class="related-progress-bar">
                            <div class="related-progress-fill"></div>
                        </div>
                    </div>
                    <div class="carousel-buttons">
                        <button class="carousel-btn prev" aria-label="السابق">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none"
                                xmlns="http://www.w3.org/2000/svg">
                                <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round" />
                            </svg>
                        </button>
                        <button class="carousel-btn next" aria-label="التالي">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none"
                                xmlns="http://www.w3.org/2000/svg">
                                <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round" />
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
        </section>









	{% endblock %}

